<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tvUser"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tvCorrectAnswers"
        android:layout_below="@id/tvUser"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tvTotalQuestions"
        android:layout_toRightOf="@id/tvCorrectAnswers"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="145dp"
        android:layout_below="@id/tvUser"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tvNumberOfPoints"
        android:layout_below="@id/tvCorrectAnswers"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCorrectAnswers"
        android:layout_toRightOf="@id/tvNumberOfPoints"
        android:layout_marginLeft="120dp"
        android:id="@+id/dateTakenTv"
        android:text=""/>


</RelativeLayout>