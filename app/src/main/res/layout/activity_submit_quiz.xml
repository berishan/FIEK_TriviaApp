<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SubmitQuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">
        <EditText
            android:layout_width="match_parent"
            android:hint="Question"
            android:layout_height="wrap_content"
            android:id="@+id/etQuestion"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/cardview_dark_background"
            android:textSize="22sp"/>
        <EditText
            android:id="@+id/etCorrectAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_bg"
            android:gravity="center"
            android:padding="15dp"
            android:hint="Correct answer"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/etIncorrectAnswer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_bg"
            android:gravity="center"
            android:padding="15dp"
            android:hint="Incorrect Answer 1"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/etIncorrectAnswer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_bg"
            android:gravity="center"
            android:hint="Incorrect Answer 2"
            android:padding="15dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/etIncorrectAnswer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_bg"
            android:gravity="center"
            android:padding="15dp"
            android:hint="Incorrect Answer 3"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"/>
        <LinearLayout
            android:id="@+id/llButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonFinish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Finish"
                android:layout_weight="1" />
            <Button
                android:id="@+id/buttonNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="NEXT"
                android:layout_weight="1" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>